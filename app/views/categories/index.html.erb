<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <div>
      <img src="<%= category.icon %>", alt="shopping_image">
      <%= link_to category.name, category_items_path(category.id) %>
    </div>
    <% total = 0 %>
    <% @item_categories.each do |expense| %>
      <% if expense.category_id == category.id %>
      <% total += expense.item.amount %>
      <% end %>
      <% end %>
      $<%= total %>
  <% end %>
</div>

<%= link_to "Add category", new_category_path %>
