<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
    <div>
      <%= link_to category.name, category_items_path(@categories) %>
    </div>
    <img src="<%= category.icon %>", alt="shopping_image">
    <div>
      <%# $<%= category.items.amount %> %>
    </div>
  <% end %>
</div>

<%= link_to "Add category", new_category_path %>
