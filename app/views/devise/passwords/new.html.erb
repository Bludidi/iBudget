<div class="nav">
  <div class="actions login-link">
    <%= link_to "Back", '/', method: :get, class: 'login-link' %>
  </div>
  <h2 class="nav-head">Forgot your password?</h2>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input" %>
  </div>

  <div class="actions">
    <%= f.submit "SEND ME RESET PASSWORD INSTRUCTIONS", class: "btn cat-btn" %>
  </div>
<% end %>

